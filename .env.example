# Prisma database URL (used by Prisma CLI for generate/migrate)
DATABASE_URL="file:./prisma/dev.db"

# For Postgres (Neon/Supabase/Cloud): uncomment and set
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require&pgbouncer=true&connection_limit=1"

# Optional: Neon Local Connect runtime override (app will prefer this at runtime)
# Use when developing locally against Neon without changing DATABASE_URL for Prisma migrations
# NEON_LOCAL_URL="postgresql://USER:PASSWORD@localhost:5432/DB?sslmode=disable"
